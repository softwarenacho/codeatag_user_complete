<div class="container">
  <div class="row">
    <% users.each do |user| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail thumbnail-fix">
          <%= image_tag user.profile_image_url.to_s.gsub!("_normal", "_bigger"), class: "pull-left username-card-img" %>
          <div class="caption">
            <h5 class="text-center username-card" style="display:inline-block"><%= user.name %></h5>
            <!-- <p><a href="#" class="btn btn-primary" role="button">Button</a></p> -->
            <%= form_for Proposal.new, url: add_proposal_path, method: :post do |f| %>
              <%= f.hidden_field :name, value: user.name%>
              <%= f.hidden_field :avatar, value: user.profile_image_url %>
              <%= f.hidden_field :twitter_handle, value: user.screen_name  %>
              <%= button_tag(type: 'submit', class: "btn btn-primary btn-xs") do %>
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
