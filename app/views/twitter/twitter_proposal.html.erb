<div id="first_section">
  <div class="row first-row">
    <h1 class="title text-center" id="speaker-title">¿Cuál es tu propuesta de Speaker?</h1>
    <%= form_tag twitter_search_path, method: "get", remote: true, class: "form-horizontal" do %>
      <div class="col-md-offset-3 col-md-6 col-xs-12">
        <div class="input-group form-group-lg">
          <div class="input-group-addon">@</div>
          <%= text_field :twitter, :search, class: "form-control", placeholder: "Usuario de Twitter" %>
          <span class="input-group-btn">
            <%= button_tag "Search" , class: "btn btn-lg btn-primary" %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div><!-- first_section -->
<div id="search_results" class="row"></div>
